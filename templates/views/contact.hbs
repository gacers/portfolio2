{{!< default}}

{{>navigation_wrapper}}

<div class="wrapper">
	<section class="main-container">
		<div class="content">
			{{#if google_maps}}
				<div id="map-background"></div>
			{{/if}}

			<div class="contact-form-wrapper">
				<div class="contact-form-container">
					<section class="contact-form">
					{{#if enquirySubmitted}}
						<h3>Thanks for getting in touch.</h3>
					{{else}}

						<form method="post">
							<input type="hidden" name="action" value="contact">

							<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
								<label>Name</label>

								<input class="form-control" name="name.full" placeholder="*Name" required type="text" value="{{formData.[name.full]}}">
							</div>

							<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
								<label>Email</label>

								<input class="form-control" name="email" placeholder="*Email" required type="email" value="{{formData.email}}">
							</div>

							<div class="form-group">
								<label>Phone</label>

								<input class="form-control" name="phone" placeholder="Phone" type="text" value="{{formData.phone}}">
							</div>

							<div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
								<label>Message</label>

								<textarea class="form-control" name="message" placeholder="Leave us a message..." required rows="8">{{formData.message}}</textarea>
							</div>

							<div class="form-group">
								<label>Captcha</label>

								<input class="form-control captcha" name="captcha" placeholder="*Type: scooter" type="text" value="{{formData.captcha}}">
							</div>

							<div class="form-actions">
								<button class="btn btn-primary" disabled="disabled" type="submit">Submit</button>
							</div>
						</form>
					{{/if}}
				</div>
				</section>
			</div>
		</div>
	</section>
</div>
